@model BatallaDePenales.Models.ViewModelDirectorTecnico

@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>Hello, world!</title>
</head>
<body>
    <div class="container">
        <a href="/Home/Index">Volver a Index</a> <br />
        @using (Html.BeginForm("GuardarDt", "Home", FormMethod.Post))
        {

            @Html.AntiForgeryToken()


            @Html.LabelFor(model => model.nombreUsuario)
            @Html.TextBoxFor(model => model.nombreUsuario, new { @class = "text-form" }) <br />




            @Html.Label("Arquero: ")
            <!--<select name="idArquero">-->
            <select name="idArquero">
                @foreach (var item in @Model.arqueros.OrderBy(o => o.apellido).ThenBy(o => o.nombre))
                {
                    <option value="@item.id"> @item.apellido, @item.nombre </option>
                }
            </select>

            @Html.Label("Delantero 1: ")
            <!--<select name="idArquero">-->
            <select name="idDelantero1">
                @foreach (var item in @Model.delantero.OrderBy(o => o.apellido).ThenBy(o => o.nombre))
                {
                    <option value="@item.id"> @item.apellido, @item.nombre </option>
                }
            </select>

            @Html.Label("Delantero 2:")
            <!--<select name="idArquero">-->
            <select name="idDelantero2">
                @foreach (var item in @Model.delantero.OrderBy(o => o.apellido).ThenBy(o => o.nombre))
                {
                    <option value="@item.id"> @item.apellido, @item.nombre </option>
                }
            </select>




            <div>
                <input type="submit" class="btn btn-primary" value="Crear Director Tecnico" />
            </div>
        }

    </div>


    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>
